<?php
// module/user/view/user/user/index.phtml:
$this->plugin('translate')->setTranslatorTextDomain('League'); 


$this->headTitle($this->title);
?>
<h3><?php echo $this->escapeHtml($this->title); ?></h3>

<table style="margin-top: 0.5em;">
<?php foreach ($this->matches as $match) : ?>
<tr style="background-color:<?php 
        $color = $this->cycle(array("#F0F0F0","transparent"))->next();
        if( $this->isActive($match)){ $color = "#FFC4C4"; }    
        echo $color;          
    ?>">
    <td  style="padding-right: 10px"><?php echo $match->getDate()->format('d.m.y H');?>h</td>
    <td style="width:20px;background: url('/images/black.png') no-repeat center center"></td>
    <td <?php $this->isWinner($match, $match->getBlackId()); ?>><?php 
            echo $this->escapeHtml($match->getBlack()->getShortName());
    ?>
    </td>
    <td style="padding: 0 6px">-</td>
    <td style="width:20px;background: url('/images/white4.png') no-repeat center center"></td>
    <td style="padding-right: 10px"<?php $this->isWinner($match, $match->getWhiteId()); ?>><?php 
        echo $this->escapeHtml($match->getWhite()->getShortName());
    ?>
    </td>
    <td><?php echo $this->result($match); ?></td>
</tr>
<?php endforeach; ?>
</table>
