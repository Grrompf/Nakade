<?php
$this->plugin('translate')->setTranslatorTextDomain('League'); 

$title = $this->translate('All open results');
$this->headTitle($title);
?>
<h3><?php echo $this->escapeHtml($title); ?></h3>

<?php $this->placeholder('openresults')->captureStart();?>
<table style="margin-top: 0.5em;">
<?php foreach ($this->matches as $game) : ?>
<tr>
    <td style="padding-right: 10px"><?php echo $game->getDate()->format('d.m.y  H');?>h</td>
    <td><?php echo $this->escapeHtml($game->getBlack()->getShortName());?></td>
    <td style="padding: 0 6px">-</td>
    <td style="padding-right: 10px"><?php echo $this->escapeHtml($game->getWhite()->getShortName());?></td>
    <td><?php
       
        echo   sprintf('<a href="%s" title="%s">%s</a>',
                 $this->url('result/add', array('action'=>'add', 'id'=>$game->getId()) ),
                 $this->translate("Enter Result"),
                 $this->translate("open")
             );
    ?></td>
</tr>
<?php endforeach; ?>
</table>
<?php $this->placeholder('openresults')->captureEnd(); 

  if($this->matches!=null)
      echo $this->placeholder('openresults');
          
        
?>