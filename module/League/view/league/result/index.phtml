<?php
$this->plugin('translate')->setTranslatorTextDomain('League'); 

$title = $this->translate('Open Results');
$this->headTitle($title);
?>
<h3><?php echo $this->escapeHtml($this->title); ?></h3>

<?php $this->placeholder('openresults')->captureStart();?>
<table style="margin-top: 0.5em;">
<?php foreach ($this->matches as $game) : ?>
<tr>
    <td style="padding-right: 2em"><?php echo $game->getDate()->format('d.m.Y   H');?>h</td>
    <td><?php echo $this->escapeHtml($this->player($game->getBlack()));?></td>
    <td style="width:1em">-</td>
    <td><?php echo $this->escapeHtml($this->player($game->getWhite()));?></td>
    <td style="padding-left:2em"><a href="<?php 
        echo $this->url(
                'result', 
                array(
                    'action'=>'addresult',
                    'id'=>$game->getId()
                )
            ); ?>"><?php echo $this->translate("Enter Result") ?></a></td>
</tr>
<?php endforeach; ?>
</table>
<?php $this->placeholder('openresults')->captureEnd(); 

  if($this->matches!=null)
      echo $this->placeholder('openresults');
          
        
?>